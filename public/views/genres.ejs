<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= genre %> Courses</title>
    <link rel="shortcut icon" href="../assets/Logo.png" type="x-icon">
    <link rel="stylesheet" href="../styles//genres.css">
    <link rel="stylesheet" href="../styles/footer.css">
</head>
<body>
    <header>
        <nav class="navbar">
          <a href="#" class="logo">BizPro</a>
          <ul class="menu-links">
            <li><a href="#">Upgrade Your Business</a></li>
            <li><a href="/">Home</a></li>
            <li><a href="#">Profile</a></li>
            <li><a href="#">About</a></li>
            <li class="join-btn" onclick="">
              <a href="/login">Join Us</a>
            </nav>
      </header>


    <div class="header">
        <%= genre  %>
    </div>

    <div class="courses-container">
        <% courses.forEach(e => { %>
            <div class="course-card">
                <div class="course-picture"><img src=`${e.imageUrl}` alt=""></div>
                <div class="course-title"><%= e.businessOnlineCourseTitle %></div>
                <div class="course-expert-name"><%= e.name %></div>
                <div class="course-description"><%= e.courseDescription %></div>
                <div class="price">₱<%= e.price %></div>
                <div class="ratings">
                    <% for (let i=0; i< e.ratings; i++) { %>
                        <div class="stars">★</div>
                        <% } %>
                </div>
            </div>
            <% }) %>
    </div>
    <section class="footer">
        <div class="footer-container">
          <h1 class="about-more">About More</h1>
          <div class="category-container"><h2>Categories</h2>
            <a href="">Finance & Accounting</a>
            <a href="">Entrepreneurship</a>
            <a href="">Business Strategy</a>
            <a href="">Negotiation & Sales Training</a>
            <a href="">Business Essentials</a>
            <a href="">Digital Marketing</a>
            <a href="">Leadership and Management</a>
            <a href="">Business Analysis</a>        
          </div>
  
          <div class="about-container"><h2>About</h2>
            <a href="">Businesses</a>
            <a href="">Press and News</a>
            <a href="">Partnership</a>
            <a href="">Privacy and Policy</a>
            <a href="">Terms of Service</a>    
          </div>
  
          <div class="community-container"><h2>Community</h2>
            <a href="">Customer Success Stories</a>
            <a href="">Community Hub</a>
            <a href="">Forum</a>
            <a href="">Events</a>
            <a href="">Blog</a>
            <a href="">Community Standards</a>       
          </div>
  
          <div class="help-container"><h2>Support</h2>
            <a href="">Help & Support</a>
            <a href="">Trust & Safety</a>
            <a href="">Selling on BizPro</a>
            <a href="">Buying on Bizpro</a>
            <a href="">Bizpro Guides</a>
            <a href="">Learn</a>
          </div>
        </div>
      </section>

    <script src="../coureDetails.js"></script>
</body>
</html>